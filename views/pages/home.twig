{% extends "../base.twig" %}

{% block stylesheet %}
	<link rel="stylesheet" href="./css/home.css">
	<link rel="stylesheet" href="./css/registration.css">
	<link rel="stylesheet" href="./css/connection.css">
{% endblock %}

{% block title %}
	<title>Accueil</title>
{% endblock %}

{% block header %}{% endblock %}

{% block main %}
	<section>
		<article>
			<div id="top_container">
				<img src="./img/logo.png" alt="logo">
