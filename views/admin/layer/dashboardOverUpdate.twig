{% extends "../dashboard.twig" %}

{% block stylesheet %}
	<link rel="stylesheet" href="../css/dashboard/dashboardOverview.css">
	<link rel="stylesheet" href="../css/dashboard/menu.css">
	<link rel="icon" type="image/x-icon" href="../img/svg/ü¶Ü icon _pie chart_.svg">
{% endblock %}

{% block title %}
	<title>Tableau de bord - Modifier actualit√©</title>
{% endblock %}

{% block main %}
	<main>
		<section class="dashboard_head">
			<h2 class="dashboard_update_title">Actualite : {{overviews.titleOverview}}</h2>
			<div class="dashboard_profile">
				<img src="" alt="" srcset="">
			</div>
		</section>


		<section>

			<article class="dashboard_users_add">
					<div class="add_user_title">
						<div>
							<img src="../img/svg/collection_add.svg" alt="statistique global">
						</div>
						<h2 class="title_add_user">Modifier une actualit√©</h2>
					</div>
					<form action="/dashboardOverviewUpdate/{{overviews.id}}" method="post" enctype="multipart/form-data">
						<div class="form_left">
							<input type="text" placeholder="Nom de l'actualit√©" name="titleOverview" value="{{overviews.titleOverview}}">
							<textarea cols="30" rows="5" name="descriptionOverview" placeholder="Description" value="{{overviews.descriptionOverview}}"></textarea>
							<div class="button">
								<button type="submit">Ajouter</button>
								<a href="/dashboardOverview">Annuler</a>
							</div>
						</div>

						<div class="form_right">
							<p>Arri√®re plan</p>
							<div class="input_file">
								<input type="file" name="backgroundImageOverview" value="{{overviews.backgroundImageOverview}}">
								<p>Importer une image</p>
							</div>
						</div>
						<div class="form_right">
							<p>Premier plan</p>
							<div class="input_file">
								<input type="file" name="imageOverview" value="{{overviews.imageOverview}}">
								<p>Importer une image</p>
							</div>
						</div>
					</form>
			</article>
		</section>

		<section class="dashboard_list_users">
		</section>
	</main>
{% endblock %}

{% block script %}
	<script src="./js/main.js"></script>
{% endblock %}
